@page "/present"
@inject DisplayService displayService
@inject IJSRuntime iJSRuntime
@inject SettingsService settingsService

<div class="@(settingsService.TrueBlackBackground ? "bg-black" : "bg-gray_darkest") relative w-full h-screen">
    <Presentor Lyric="@displayService.LyricToDisplay" Verse="@displayService.BibleVerseToDisplay" BibleBook="@displayService.BibleBookInfoToDisplay"
               IsBible="@displayService.IsBible">

    </Presentor>
</div>
@code {
    protected override void OnInitialized()
    {
        displayService.OnChange += StateHasChanged;
    }
}
